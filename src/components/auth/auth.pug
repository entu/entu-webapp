div
    .background(:class='background')
    .content.row.justify-content-center
        .borderbox.h-100.col-10.col-sm-6.col-md-4.col-lg-3.col-xl-2
            .row.h-100(v-show='!this.authenticating && !accounts')
                .col-12
                    img.col-5.col-sm-6.col-xl-7.mt-5.mx-auto.d-block(src='../../assets/logo.png', alt='Entu')
                    h1.text-center.mt-5.mb-4 {{ $t('login') }}
                    ul.list-unstyled
                        li
                            a.pl-4(:href="'https://api.entu.ee/auth/google?next=' + host + '/auth/'")
                                i.fab.fa-google
                                span Google
                        li
                            a.pl-4(:href="'https://api.entu.ee/auth/facebook?next=' + host + '/auth/'")
                                i.fab.fa-facebook
                                span Facebook
                        li
                            a.pl-4(:href="'https://api.entu.ee/auth/microsoft?next=' + host + '/auth/'")
                                i.fab.fa-microsoft
                                span Microsoft
                        li(style='border-color:#bebebe')
                            a.pl-4(href='')
                                i.fas.fa-mobile-alt
                                span Mobiil-ID
                        li
                            a.pl-4(href='')
                                i.fas.fa-id-card
                                span {{ $t('id_card') }}
                        //- li(style='border-color:#bebebe')
                        //-     a.pl-4(href='')
                        //-         i.fas.fa-university
                        //-         span TAAT
                .col-12.align-self-end
                    p.text-center {{ $t('info') }}
            .row.h-100(v-show='accounts && accounts.length > 0')
                .col-12
                    img.col-5.col-sm-6.col-xl-7.mt-5.mx-auto.d-block(src='../../assets/logo.png' alt='Entu')
                    h1.text-center.mt-5.mb-4 {{ $t('chose_db') }}
                    ul.list-unstyled
                        li(v-for='a in accounts', :key='a.account')
                            router-link.pl-4(:to="{ name: 'menu', params: { account: a.account } }")
                                i.fas.fa-database
                                span {{ a.account }}
                .col-12.align-self-end.text-center
                    a(href='', @click.prevent='logOut')
                        i.fas.fa-sign-out-alt
                        span {{ $t('logout') }}
            .row.h-100(v-show='authenticating')
                .col-12.align-self-center.text-center
                    i.fas.fa-spinner.fa-pulse
