nav
    height 56px
    padding-right env(safe-area-inset-right) !important
    border-bottom 1px solid #99aaae

    button
        height 56px
        color #6c6c6c
        font-size 18px
        border none
        background none

        &:hover
            color #1e434c
            text-decoration none

    .loader
        margin 0
        height 20px
        width 20px

    .dropdown:hover>.dropdown-menu
        display block

    .dropdown-toggle::after
        display none

    .nav-item.dropdown.show
        a
            color #3b3b3b
            text-decoration none
            outline none

    .dropdown-menu-right
        border-radius 0
        border 1px solid #d1d1d1
        border-top none
        top 54px
        min-width 180px

        .dropdown-item
            span
                margin-left 10px

            &:active
                color #ffffff !important
                background #3b3b3b

@media (prefers-color-scheme: dark)
    nav
        border-color #697278

        a
            color #ffffff

            &:hover
                color #697278
