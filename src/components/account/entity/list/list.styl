#search
    height 56px
    padding-left env(safe-area-inset-left) !important
    border-bottom 1px solid #99aaae
    color #6c6c6c

    label
        margin-bottom 0
        font-size 18px

    .input-group-addon
    .form-control
        padding 0
        border-radius 0
        border none
        background none

    .form-control
        height 24px
        padding-left 10px

        &:focus
            outline none
            box-shadow none

#list
    overflow-y auto
    overflow-x hidden
    -webkit-overflow-scrolling touch
    padding-left env(safe-area-inset-left) !important
    border-right 1px solid #99aaae

    a
        color inherit

        &:hover
            text-decoration none

    .media
        border-bottom 1px solid #d6ddde

        &:last-child
            border-bottom none

        &.router-link-exact-active
            background #eeeeee

            img
                padding 2px !important
                background #ffffff
                border 1px solid #eeeeee

        img
            padding 2px !important
            height 50px
            width 50px
            border 1px solid #d5d5d5

        h5
            font-size 16px
            line-height 18px

        .media-body
            p
                color #919191
                font-size 14px
                line-height 17px
