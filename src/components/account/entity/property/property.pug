.row.my-1(v-if='visible', :class='{ "mb-3": edit }')
    strong.col-12.col-md-4.col-xl-3.text-md-right(:class='{ "mt-2": edit }') {{ property.name || property.key }}
    .col-12.col-md-8.col-xl-9
        .property(v-for='i in values' v-if='i')
            template(v-if='!edit')
                p.mb-1(v-if='i.to')
                    router-link(:to='i.to', :target='i.target') {{ i.string }}
                    span {{ i.info }}
                p.mb-1(v-else-if='i.string') {{ i.string }}
            template(v-else)
                .mt-1(v-if='i.control === "boolean"')
                    i.icon-on(v-if='i.boolean', @click='save(i, false)')
                    i.icon-off(v-if='!i.boolean', @click='save(i, true)')
                input.col-12.col-md-12.col-xl-8.my-2(v-if='i.control === "input"', :value='i.string', @keydown='change', @blur='save(i, $event.target.value)')
                textarea.col-12.col-md-12.col-xl-8.my-2(v-else-if='i.control === "text"', :value='i.string', @focus='resizeText', @input='resizeText', @keydown='change', @blur='save(i, $event.target.value)', rows=3)
