.row.my-2(v-if='visible', :class='{ "mb-3": edit }')
    strong.col-12.col-md-4.col-xl-3.text-md-right(:class='{ "mt-2": edit }') {{ property.name || property.key }}
    .col-12.col-md-8.col-xl-9
        .property(v-for='i in values' v-if='i')
            template(v-if='!edit')
                p.mb-1(v-if='i.to')
                    router-link(:to='i.to', :target='i.target') {{ i.string }}
                    span {{ i.info }}
                p.mb-1(v-else-if='i.string') {{ i.string }}
            template(v-else)
                input.col-12.col-md-12.col-xl-8.mt-1(v-if='i.control === "input"', :value='i.string', @keydown='change', @blur='save(i, $event.target.value)')
                p.mt-2.mb-0(v-else-if='i.string') {{ i.string }}
