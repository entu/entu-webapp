.h-100.col-12.col-sm-4.col-lg-3(v-if='isQuery')
    form#search.row.p-0(action='.')
        .input-group.p-3
            label.input-group-addon(for='search-field')
                i.icon-search
            input#search-field.form-control(type='search', v-model='searchString', @keydown.enter.prevent)
    transition-group#list.h-100.row.p-0(name='fade', :duration=200)
        router-link.media.col-12.p-3(v-for='e in entities', :key='e._id', :to="{ name: 'entity', params: { entity: e._id }, query: $route.query }")
            img.rounded-circle.align-self-start.mr-3(:src='e._thumbnail', :alt='e.name')
            .media-body.align-self-center
                h5.mb-1.t-0 {{ e.name || e._id }}
                p.mb-0.mt-0 {{ e.description }}
