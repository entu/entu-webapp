html
body
    height 100%

body
    font-family Avenir, 'Helvetica Neue', Helvetica, Arial, sans-serif !important
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

    .fade-enter-active
    .fade-leave-active
        transition opacity .4s

    .fade-enter
    .fade-leave-to
        opacity 0

a
input
textarea
select
    outline 0

a
    color inherit

    &:hover
        color #1e434c
        text-decoration none

h1
h2
    color #1e434c

h1
    font-size 28px

h2
    font-size 20px

h3
    font-size 18px

.loader
    margin 0 auto
    width 50px
    height 50px
    border 2px solid #d6ddde
    border-top 2px solid #1e434c
    border-radius 50%
    animation spin 1s linear infinite

@keyframes spin {
    0% { transform: rotate(0deg) }
    100% { transform: rotate(360deg) }
}


@media (prefers-color-scheme: dark)
    body
        color #ffffff
        background-color #373838

    h1
    h2
        color #c8ccce

    a
        &:hover
            color #697278

    .loader
        border-color #697278
        border-top-color #ffffff



