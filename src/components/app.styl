.loader
    margin 0 auto
    width 50px
    height 50px
    border 2px solid #d6ddde
    border-top 2px solid #1e434c
    border-radius 50%
    animation spin 1s linear infinite

@keyframes spin {
    0% { transform: rotate(0deg) }
    100% { transform: rotate(360deg) }
}


@media (prefers-color-scheme: dark)
    body
        color #ffffff
        background-color #38444c

    h1
        color #ffffff

    a
        &:hover
            color #697278

    .loader
        border-color #697278
        border-top-color #1f2529
