#list
    overflow-y auto
    overflow-x hidden
    -webkit-overflow-scrolling touch
    padding-left env(safe-area-inset-left) !important

    a
        color inherit

        &:hover
            text-decoration none

    .media
        border-bottom 1px solid #e4e4e4

        &:last-child
            border-bottom none

        img
            padding 2px !important
            border 1px solid #d5d5d5

        .media-body
            p
                color #919191
